    image
    {
      function         = BOX
      shadow           = IN
      recolorable      = TRUE
      file             = "button-in.png"
      border           = { 8, 8, 8, 8 }
      stretch          = TRUE
    }
    image
    {
      function         = BOX
      state            = PRELIGHT
      recolorable      = TRUE
