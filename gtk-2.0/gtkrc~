  fg[NORMAL] = "#ffbb33"
  fg[INSENSITIVE] = "#000000"
  fg[ACTIVE] = "#ffbb33"
  fg[SELECTED] = "#ffbb33"
  fg[PRELIGHT] = "#ffbb33"

  engine "pixmap"
  {
		image
		{
			function				 = BOX
			detail					 = "buttondefault"
      file             = "button-default.png"
      border           = { 8, 8, 8, 8 }
      stretch          = TRUE
		}
    image
    {
      function         = BOX
      shadow           = IN
      state            = PRELIGHT
      recolorable      = TRUE
